{
  "name": "maintainarr",
  "version": "0.1.0",
  "private": true,
  "description": "Task automation and metadata-driven grouping for the *arr ecosystem",
  "author": "nokternol",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch server -e ts,json --exec tsx --tsconfig server/tsconfig.json server/index.ts",
    "dev:debug": "nodemon --watch server -e ts,json --exec tsx --tsconfig server/tsconfig.json --inspect server/index.ts",
    "build": "yarn build:next && yarn build:server",
    "build:server": "tsc --project server/tsconfig.json && tsc-alias -p server/tsconfig.json",
    "build:next": "next build",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run --browser chrome",
    "test:e2e:ci": "start-server-and-test dev http://localhost:5057 test:e2e:headless",
    "ladle": "ladle serve",
    "ladle:build": "ladle build",
    "lint": "biome check --write src server",
    "lint:fast": "{ git diff --name-only --diff-filter=ACMR HEAD; git ls-files --others --exclude-standard; } | sort -u | xargs -r yarn biome check --write",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "yarn typecheck:server && yarn typecheck:client",
    "typecheck:server": "tsc --project server/tsconfig.json --noEmit",
    "typecheck:client": "tsc --noEmit",
    "verify": "yarn lint:fix && yarn typecheck && yarn test:run && yarn test:e2e:ci",
    "verify:fast": "yarn lint:fast && yarn typecheck && yarn test:run",
    "ci": "yarn lint && yarn typecheck && yarn test:run && yarn test:e2e:ci",
    "ci:fast": "yarn lint && yarn typecheck && yarn test:run"
  },
  "dependencies": {
    "awilix": "^12.1.0",
    "axios": "^1.7.9",
    "connect-typeorm": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "date-fns": "^3.6.0",
    "express": "^4.21.2",
    "express-session": "^1.19.0",
    "helmet": "^8.1.0",
    "lodash": "^4.17.21",
    "next": "15.1.5",
    "node-cache": "^5.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "swr": "^2.2.5",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@ladle/react": "^4.1.2",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.2",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "cypress": "13.17.0",
    "happy-dom": "^20.6.0",
    "jsdom": "^25.0.1",
    "msw": "^2.7.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.49",
    "start-server-and-test": "^2.1.3",
    "supertest": "^7.2.2",
    "tailwindcss": "^3.4.17",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=24.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.19"
}
