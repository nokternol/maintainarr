{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "../dist",
    "noEmit": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["*"],
      "@app/*": ["../src/*"],
      "@tests/*": ["../tests/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
